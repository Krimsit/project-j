{
  "name": "api",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "tsc -p tsconfig.build.json",
    "clean": "pnpm clean:builds && pnpm clean:dependencies",
    "clean:builds": "rimraf dist",
    "clean:dependencies": "rimraf .turbo && rimraf node_modules",
    "dev": "tsx watch ./src/main.ts",
    "start": "tsc -p tsconfig.build.json & node ./dist/main.js",
    "typecheck": "tsc -b --noEmit --force"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.826.0",
    "@nestjs/common": "11.1.3",
    "@nestjs/config": "^4.0.2",
    "@nestjs/core": "11.1.3",
    "@nestjs/jwt": "^11.0.0",
    "@nestjs/mongoose": "11.0.3",
    "@nestjs/passport": "^11.0.5",
    "@nestjs/platform-express": "11.1.3",
    "@nestjs/schedule": "^6.0.0",
    "@shared/api": "workspace:*",
    "@shared/types": "workspace:*",
    "argon2": "^0.43.0",
    "axios": "^1.9.0",
    "dotenv": "^16.5.0",
    "dotenv-expand": "^12.0.2",
    "google-auth-library": "^9.15.1",
    "mongoose": "8.15.1",
    "passport": "^0.7.0",
    "passport-custom": "^1.1.1",
    "passport-google-oauth20": "^2.0.0",
    "passport-jwt": "^4.0.1",
    "passport-local": "^1.0.0",
    "reflect-metadata": "0.2.2",
    "rxjs": "7.8.2",
    "tsx": "^4.19.4",
    "uuid": "^11.1.0",
    "zod": "^3.25.56"
  },
  "devDependencies": {
    "@core/typescript-configs": "workspace:*",
    "@nestjs/cli": "11.0.7",
    "@nestjs/schematics": "11.0.5",
    "@nestjs/testing": "11.1.3",
    "@types/argon2": "^0.15.4",
    "@types/express": "^4.17.21",
    "@types/multer": "^1.4.13",
    "@types/passport-google-oauth20": "^2.0.16",
    "@types/passport-jwt": "^4.0.1",
    "@types/passport-local": "^1.0.38",
    "@types/supertest": "6.0.3",
    "supertest": "7.1.1"
  }
}
